extends ../layouts/error_layout

block content
    section.content.center-ver
        .error-page.mar-top-0
            h2.headline 500
            .error-content
                h3
                    i.fa.fa-warning.text-yellow
                    |  Oops! Something went wrong.
                p
                    | We will work on fixing that right away.
                    | Meanwhile, you may&nbsp;
                    a(href='/admin/') return to dashboard
                    | &nbsp;or try using the search form.
                form.search-form
                    .input-group
                        input.form-control(type='text', name='search', placeholder='Search')
                        .input-group-btn
                            button.btn.btn-info(type='submit', name='submit')
                                i.fa.fa-search

// Left side column. contains the logo and sidebar
aside.left-side.sidebar-offcanvas
    // sidebar: style can be found in sidebar.less
    section.sidebar
        // Sidebar user panel
        .user-panel(style='margin-top:50px;')
            .pull-left.info
                p Roadio admin
                a(href='#')
                    i.fa.fa-circle.text-success
                    |  Online
        // sidebar menu: : style can be found in sidebar.less
        ul.sidebar-menu
            li(class=page === "dashboard" ? "active" : "")
                a(href='/admin')
                    i.fa.fa-dashboard
                    span Dashboard
            li(class=page === "users" ? "active" : "")
                a(href='/admin/users')
                    i.fa.fa-users
                    span Users
            li.treeview(class=page === "drivers" ? "active" : "")
                a(href='#')
                    i.fa.fa-users
                    span Drivers
                    i.fa.fa-angle-left.pull-right
                ul.treeview-menu
                    li
                        a(href='/admin/drivers/add_driver')
                            i.fa.fa-angle-double-right
                            |  Add Driver
                    li
                        a(href='/admin/drivers')
                            i.fa.fa-angle-double-right
                            |  List Drivers
                    li
                        a(href='/admin/drivers/request')
                            i.fa.fa-angle-double-right
                            |  Driver Request
            li.treeview
                a(href='#')
                    i.fa.fa-truck
                    span Deliveries
                    i.fa.fa-angle-left.pull-right
                ul.treeview-menu
                    li
                        a(href='/admin/new/requests')
                            i.fa.fa-angle-double-right
                            |  New Requests
                    li
                        a(href='/admin/completed/requests')
                            i.fa.fa-angle-double-right
                            |  Completed
                    li
                        a(href='/admin/pending/requests')
                            i.fa.fa-angle-double-right
                            |  Pending
            //li
            //    a(href='/admin/live/requests')
            //        i.fa.fa-info
            //        span Live requests
            li.treeview
                a(href='#')
                    i.fa.fa-money
                    span Reporting
                    i.fa.fa-angle-left.pull-right
                ul.treeview-menu
                    li.treeview
                        a(href='#')
                            i.fa.fa-money
                            span Accounts
                            i.fa.fa-angle-left.pull-right
                        ul.treeview-menu
                            li
                                a(href='/admin/accounts/user')
                                    i.fa.fa-angle-double-right
                                    | Users
                            li
                                a(href='/admin//accounts/driver')
                                    i.fa.fa-angle-double-right
                                    | Drivers




                    i.fa.fa-users
                    span Drivers
                    i.fa.fa-angle-left.pull-right
                ul.treeview-menu
                    li
                        router-link(to='/admin/drivers/add_driver')
                            i.fa.fa-angle-double-right
                            |  Add Driver
                    li
                        router-link(to='/admin/drivers')
                            i.fa.fa-angle-double-right
                            |  List Drivers

            li.treeview
                a(href='#')
                    i.fa.fa-truck
                    span Deliveries
                    i.fa.fa-angle-left.pull-right
                ul.treeview-menu
                    li
                        router-link(to='/admin/requests')
                            i.fa.fa-angle-double-right
                            |  New Requests
                    li
                        router-link(to='/admin/requests/completed')
                            i.fa.fa-angle-double-right

                    li.treeview
                        a(href='#')
                            i.fa.fa-money
                            span Accounts
                            i.fa.fa-angle-left.pull-right
                        ul.treeview-menu
                            li
                                router-link(to='/admin/accounts/user')
                                    i.fa.fa-angle-double-right
                                    | Users
                            li
                                router-link(to='/admin/accounts/driver')
                                    i.fa.fa-angle-double-right
                                    | Drivers
            li
                router-link(to='/admin/leaderboard')
                    i.fa.fa-certificate
                    span Leader Board